    <h1>Reestablecer contraseña</h1>
    <div id="reset-input">
        <form action="/api/sessions/reset-password" method="POST" id="resetPasswordForm">
            <div>
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div>
                <label for="password">Nueva contraseña:</label>
                <input type="password" id="password" name="password" required>
            </div>
            <div>
                <label for="confirmPassword">Confirma contraseña:</label>
                <input type="password" id="confirmPassword" name="confirmPassword" required>
            </div>      
            <button type="submit" class=" btn btn-secondary">Enviar</button>      
        </form>
        
    </div>


    <script>
        document.getElementById('resetPasswordForm').addEventListener('submit', async function (event) {
            event.preventDefault();

            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

            if (password !== confirmPassword) {
                await Swal.fire({
                    icon: 'warning',
                    title: 'Atención',
                    text: 'Inténtelo de nuevo. Las contraseñas no coinciden.',
                });
                return;
            }

            const formData = {
                email: email,
                password: password,
                confirmPassword: confirmPassword
            };

            try {
                const response = await fetch('/api/sessions/reset-password', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(formData)
                });

                const data = await response.json();

                if (response.ok) {
                    await Swal.fire({
                        icon: 'success',
                        title: 'Contraseña restablecida',
                        text: 'Se reestablecio correctamente',
                        timer: 2000,
                        showConfirmButton: false
                    });
                    window.location.href = '/login';
                } else {
                    console.error('Error al restablecer contraseña:', data.error);
                    await Swal.fire({
                        icon: 'error',
                        title: 'Error al restablecer contraseña',
                        text: 'Por favor, inténtelo de nuevo.'
                    });
                }
            } catch (error) {
                console.error('Error al restablecer contraseña:', error);
                await Swal.fire({
                    icon: 'error',
                    title: 'Error interno del servidor',
                    text: 'Por favor, inténtelo de nuevo más tarde.'
                });
            }
        });
    </script>    
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.all.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</body>